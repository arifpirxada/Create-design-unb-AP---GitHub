<style>
    .image-list-container {
        display: flex;
    }

    .image-list-container 

</style>

<div class="image-list-container">
    {% for block in section.blocks %}
        <img src="{{ block.settings.image |  image_url }}" width="{{ block.settings.width }}" height="auto" alt="{{ block.settings.image-alt }}">
    {% endfor %}
</div>

{% schema %}
  {
    "name": "Image list",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "range",
            "id": "width",
            "min": 0,
            "max": 5,
            "step": 1,
            "label": "Images to show per row",
            "default": 3
        }
    ],
    "blocks": [
        {
            "type": "image_picker",
            "name": "Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "range",
                    "id": "width",
                    "min": 0,
                    "max": 1000,
                    "step": 10,
                    "label": "Width",
                    "default": 300
                },
                {
                    "type": "text",
                    "id": "image-alt",
                    "label": "Image alt"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Image list"
      }
    ]
  }
{% endschema %}
<style>
    .image-list-container {
        display: flex;
        gap: 5px;
        justify-content: center;
        align-items: center;
    }

    .image-list-container img {
        flex: 0 0 calc(100% / {{ section.settings.img-per-row }} - 5px * ({{ section.settings.img-per-row }} - 1) / 2);
    }

</style>

<div class="image-list-container">
    {% for block in section.blocks %}
        <img src="{{ block.settings.image |  image_url }}" height="auto" alt="{{ block.settings.image-alt }}">
    {% endfor %}
</div>

{% schema %}
  {
    "name": "Image list",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "range",
            "id": "img-per-row",
            "min": 0,
            "max": 5,
            "step": 1,
            "label": "Images to show per row",
            "default": 3
        }
    ],
    "blocks": [
        {
            "type": "image_picker",
            "name": "Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "image-alt",
                    "label": "Image alt"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Image list"
      }
    ]
  }
{% endschema %}
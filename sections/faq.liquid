{% stylesheet %}
  .faq-container > * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  .wrapper {
    /* max-width: 75%;
    margin: auto; */
    width: 80%;
    padding: 0px 8%;
  }

  @media screen and (max-width: 1024px) {
    .wrapper {
        width: 75%;
        padding: 0;
        margin: auto;
    }
  }

  @media screen and (max-width: 768px) {
    .wrapper {
        width: 90%;
    }
  }

  .wrapper > p,
  .wrapper > h1 {
    margin-top: 3rem;
    margin-bottom: 6rem;
    font-weight: bold;
  }

  .wrapper > h1 {
    letter-spacing: 3px;
  }

  .accordion {
    background-color: white;
    color: rgba(0, 0, 0, 0.8);
    cursor: pointer;
    font-size: 1.2rem;
    width: 100%;
    padding: 2rem 2.5rem;
    border: none;
    outline: none;
    transition: 0.4s;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: bold;
    font-size: 2rem;
    font-weight: bold;
    margin-top: 2rem;
  }

  .accordion i {
    font-size: 1.6rem;
  }

  /* .active,
  .accordion:hover {
    background-color: #f1f7f5;
  } */
  .pannel {
    padding: 0 2.7rem 2.5rem;
    background-color: white;
    overflow: hidden;
    /* background-color: #f1f7f5; */
    display: none;
    border-bottom: 1px solid #f5dbdb;
    transition: max-height 2s;
  }
  .pannel p {
    color: rgba(0, 0, 0, 0.7);
    font-size: 1.8rem;
    line-height: 1.4;
    margin-top: 0;
  }

  .faq {
    margin: 10px 0;
    border-bottom: 1px solid #f5dbdb;
  }
  .faq.active {
    border: none;
  }

{% endstylesheet %}


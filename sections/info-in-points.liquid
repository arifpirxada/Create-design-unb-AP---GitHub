{{ 'migration.css' | asset_url | stylesheet_tag }}


{% assign migration_meta_object = page.metafields.custom.migration_content.value %}
{% assign topics = migration_meta_object.topics.value %}


{% for topic in topics %}
<div class="info-points-container {% if section.settings.vertical-points == true %}points-container-vertical{% endif %}">
  <h2 class="points-heading">{{ section.settings.heading }}</h2>

  <div class="points {% if section.settings.vertical-points == true %}points-vertical{% endif %}">

    {% comment %} {% for block in section.blocks %}
      <div class="point d-flex">
        <span class="points-line {% if forloop.first %}d-none-on-small-devices{% endif %}"></span>
        <div class="point-content">
          <p class="point-heading">{{ block.settings.title }}</p>
          {% if block.settings.description != blank %}
            <p class="point-desc">{{ block.settings.description }}</p>
          {% endif %}
        </div>

      </div>

    {% endfor %} {% endcomment %}
  </div>

</div>
{% endfor %}

{% schema %}
  {
    "name": "Info in points",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "checkbox",
        "id": "vertical-points",
        "label": "Show points vertically",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Point",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Info in points"
      }
    ]
  }
{% endschema %}
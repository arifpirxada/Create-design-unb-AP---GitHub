{% stylesheet %}
  .faq-container > * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  .wrapper {
    width: 80%;
    padding: 0 8%;
  }

  @media screen and (max-width: 1024px) {
    .wrapper {
      width: 75%;
      padding: 0;
      margin: auto;
    }
  }

  @media screen and (max-width: 768px) {
    .wrapper {
      width: 90%;
    }
  }

  .wrapper > p,
  .wrapper > h1 {
    margin-top: 3rem;
    margin-bottom: 6rem;
    font-weight: bold;
  }

  .wrapper > h1 {
    letter-spacing: 3px;
  }

  .accordion {
    background-color: white;
    color: rgba(0, 0, 0, 0.8);
    cursor: pointer;
    font-size: 1.2rem;
    width: 100%;
    padding: 2rem 2.5rem 2rem 0;
    border: none;
    outline: none;
    transition: 0.4s;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: bold;
    font-size: 2rem;
    font-weight: bold;
    margin-top: 2rem;
    text-align: left;
  }

  .accordion img {
    margin-left: 10px;
    transition: transform 0.2s;
  }

  .pannel {
    background-color: white;
    overflow: hidden;
    border-bottom: 1px solid #f5dbdb;
    transition: max-height 0.2s;
    max-height: 0;
  }
  .pannel p {
    color: rgba(0, 0, 0, 0.7);
    font-size: 1.8rem;
    line-height: 1.4;
    margin-top: 0;
  }

  .faq {
    margin: 10px 0;
    border-bottom: 1px solid #f5dbdb;
  }
  .faq.active {
    border: none;
  }

{% endstylesheet %}

<div class="faq-container">
  <div class="wrapper">
    <h1>{{ section.settings.title }}</h1>

    {% for block in section.blocks %}

        <div class="faq">
          <button class="accordion">
            {{ block.settings.faq-heading }}
            <img
              src="{{ "down-arrow.png" | asset_url }}"
              width="20"
              height="auto"
              alt="Down arrow">
          </button>
          <div class="pannel">
            <p>
              {{ block.settings.faq-answer }}
            </p>
          </div>
        </div>

    {% endfor %}

  </div>
</div>


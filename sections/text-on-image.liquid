{% stylesheet %}
  .text-on-image-container {
    position: relative;
    text-align: center;
    color: white;
  }

  .text-on-image-container img {
    width: 100%;
    height: auto;
  }

  .text-on-image-container h1 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 2rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }
{% endstylesheet %}

<div class="text-on-image-container">
  <img src="{{ section.settings.image }}" alt="Background image">
  <h1>{{ section.settings.text }}</h1>
</div>

{% schema %}
  {
    "name": "Text on image",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "text",
        "id": "text",
        "label": "Text"
      }
    ],
    "presets": [
      {
        "name": "Text on image"
      }
    ]
  }
{% endschema %}
{% stylesheet %}
  .text-on-image-container {
    position: relative;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .text-on-image-container img {
    width: 100%;
    height: auto;
  }

  .text-on-image-container .text-on-image-content {
    position: absolute;
    width: 70%;
  }

  .text-on-image-container h1 {
    font-size: 54px;
    font-weight: 800;
    font-family: "Manrope-Medium";
    font-style: normal;
  }

  .text-left {
    color: #000000 !important;
  }

  .text-right {
    color: #ffffff !important;
  }

  @media screen and (max-width: 768px) {
    .text-on-image-container div.h1 {
      font-size: 40px !important;
    }
  }
  .d-none {
    display: none !important;
  }
{% endstylesheet %}

<div class="text-on-image-container">
  <img
    class="desktop-image"
    src="{{ section.settings.image | image_url }}"
    alt="Background image">
  <img
    class="mobile-image d-none"
    src="{{ section.settings.mobile-image | image_url }}"
    alt="Background image">

  <div class="text-on-image-content">
    <h1 class="{% if section.settings.text-on-left %}text-left{% else %}text-right{% endif %}">{{ section.settings.text }}</h1>
    {% if section.settings.description != blank %}
      <p class="{% if section.settings.text-on-left %}text-left{% else %}text-right{% endif %}">{{ section.settings.description }}</p>
    {% endif %}
  </div>

</div>

{%- javascript -%}
  document.addEventListener("DOMContentLoaded", function() {
    const image = document.querySelector(".desktop-image");
    const mobileImage = document.querySelector(".mobile-image");
    if (window.innerWidth <= 768) {
      image.classList.add("d-none");
      mobileImage.classList.remove("d-none");
    }
  });
{%- endjavascript -%}

{% schema %}
  {
    "name": "Text on image",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "mobile-image",
        "label": "Image for mobile"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "description",
        "label": "description"
      }, {
        "type": "checkbox",
        "id": "text-on-left",
        "default": false,
        "label": "Show Text on left"
      }
    ],
    "presets": [
      {
        "name": "Text on image"
      }
    ]
  }
{% endschema %}
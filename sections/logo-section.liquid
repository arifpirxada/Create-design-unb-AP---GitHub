{%- stylesheet -%}
    .logo-container {
        width: 100vw;
        padding: 2rem 3rem;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }
{%- endstylesheet -%}

<div class="logo-container">
    {% for block in section.blocks %}
    <div class="logo">
        <img src="{{ block.logo | image_url }}" width="100" height="auto" alt="logo">
    </div>
    {% endfor %}
</div>

{% schema %}
  {
    "name": "Logo section",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "default": "Heading",
            "label": "Heading"
        }
    ],
    "blocks": [
      {
        "type": "image_picker",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo section"
      }
    ]
  }
{% endschema %}